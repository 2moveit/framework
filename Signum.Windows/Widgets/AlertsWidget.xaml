<UserControl x:Class="Signum.Windows.Widgets.AlertsWidget"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:m="clr-namespace:Signum.Windows">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Expander BorderBrush="#FF878787" Style="{DynamicResource GroupBoxExpander}" x:Name="expAlerts" Margin="5" Background="White" IsExpanded="True">
        <Expander.Header>
            <Grid HorizontalAlignment="Stretch" MinWidth="100">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Source="..\Images\alert.png" Stretch="Fill" Margin="-2,-2,-2,-2"/>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.ColumnSpan="2" FontWeight="Bold" Text="{m:Loc Alerts}" TextWrapping="Wrap" x:Name="tbAlerts"/>
            </Grid>
        </Expander.Header>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto" MinHeight="20"/>
            </Grid.RowDefinitions>
            <Border CornerRadius="7,7,7,7" Grid.Row="1" BorderThickness="0">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#00FFE793" Offset="0.009"/>
                        <GradientStop Color="#3F000000" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel>
                    <Button x:Name="btnWarnedAlerts" Click="btnAlertsWarn_Click" Content="{m:Loc WarnedAlerts}" Style="{DynamicResource LinkButtonStyle}" HorizontalAlignment="Right" VerticalAlignment="Top" FontFamily="Comic Sans MS" Foreground="#FF077500" Margin="5,0,5,0" />
                    <Button x:Name="btnCheckedAlerts" Click="btnAlertsChecked_Click" Content="{m:Loc CheckedAlerts}" Style="{DynamicResource LinkButtonStyle}" HorizontalAlignment="Right" VerticalAlignment="Top" FontFamily="Comic Sans MS" Foreground="#FF077500" Margin="5,0,5,0" />
                    <Button x:Name="btnFutureAlerts" Click="btnFutureAlerts_Click" Content="{m:Loc FutureAlerts}" Style="{DynamicResource LinkButtonStyle}" HorizontalAlignment="Right" VerticalAlignment="Top" FontFamily="Comic Sans MS" Foreground="#FF077500" Margin="5,0,5,0" />
                    <Button x:Name="btnNewAlert" Click="btnNewAlert_Click" Content="{m:Loc NewAlert}" Style="{DynamicResource LinkButtonStyle}" HorizontalAlignment="Right" VerticalAlignment="Top" FontFamily="Comic Sans MS" Foreground="#FF077500" Margin="5,0,5,0" />
                </StackPanel>
            </Border>
        </Grid>
    </Expander>
</UserControl>
