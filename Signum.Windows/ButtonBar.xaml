<UserControl x:Class="Signum.Windows.ButtonBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:m="clr-namespace:Signum.Windows" x:Name="me">
    <UserControl.Background>
        <LinearGradientBrush StartPoint="0.5 0" EndPoint="0.5 1">
            <GradientStop Color="#FFF0F8FF" Offset="0"/>
            <GradientStop Color="#FFD8EBFF" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.Background>
    <StackPanel Orientation="Horizontal">
        <m:ToolBarButton x:Name="btOk" Image="Images\ok.png"  Background="Green" Content="{m:Loc Ok}"  MinWidth="50" IsDefault="true"/>
        <m:ToolBarButton x:Name="btSave" Image="Images\save.png" Background="Blue" Content="{m:Loc Save}" MinWidth="50"/>
        <StackPanel x:Name="stackPanel" Orientation="Horizontal"/>
        <m:ToolBarButton x:Name="btReload" Image="Images\reload.png" Background="RoyalBlue" Content="{m:Loc Reload}" Visibility="{Binding ReloadVisible, ElementName=me, Converter={x:Static m:Converters.BoolToVisibility}}" MinWidth="50"/>
    </StackPanel>
</UserControl>
