<UserControl x:Class="Signum.Windows.ColorUtils.RGBTextBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UniformGrid  Columns="4" HorizontalAlignment="Stretch" Margin="5" Focusable="False">
        <TextBox x:Name="PART_tbA" MaxLength="3" TextChanged="PART_tb_TextChanged" ToolTip="Alpha"/>
        <TextBox x:Name="PART_tbR" MaxLength="3" TextChanged="PART_tb_TextChanged" ToolTip="Red" />
        <TextBox x:Name="PART_tbG" MaxLength="3" TextChanged="PART_tb_TextChanged" ToolTip="Green"/>
        <TextBox x:Name="PART_tbB" MaxLength="3" TextChanged="PART_tb_TextChanged" ToolTip="Blue"/>
    </UniformGrid>
</UserControl>