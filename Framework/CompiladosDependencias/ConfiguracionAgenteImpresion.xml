<?xml version="1.0" encoding="utf-8" ?>
<!-- Este archivo contiene los parámetros necesarios para configurar el
	   Agente de Impresión.-->
<configuracion xmlns="http://signumsoftware.com/2007/AgenteImpresion">

	<!-- Especifica el directorio en el que se genera por defecto el archivo PDF 
	   con la configuración "autosave" de la impresora virtual -->
	<propiedad nombre="DirectorioSalidaPDF" valor="C:\Documents and Settings\mapache1\Escritorio\pruebas OXML\pruebagestor\impresion" />

	<!-- Especifica si la escucha sobre el directorio de salida debe ser permanente o no.
	   Para la configuración de un servidor de impresión con Word.Interop, debe establecerse como "true".
	   En el caso de que sea "false", cada vez que se genere un PDF con Word.Interop se creará el
	   objeto de escucha y, una vez finalizado el proceso, se destruirá.-->
	<propiedad nombre="PDFFileSystemWatcherAlwaysOn" valor="false" />

	<!-- Especifica el nombre de la impresora virtual para utilizar el método de impresión
	   con Microsoft.Office.Word.Interop.-->
	<propiedad nombre="NombreImpresoraPDF" valor="PDFCreator" />

	<!-- Especifica el nombre del archivo temporal de impresión asignado por la impresora virtual PDF-->
	<propiedad nombre="NombreArchivoTemporalPDF" valor="temporal.pdf" />

	<!-- Lo mismo que con la configuración para la impresora virtual de PDF, establece los
	   valores para la impresora virtual de MDI (Microsoft Document Image)-->
	<propiedad nombre="DirectorioSalidaMDI" valor="C:\Documents and Settings\mapache1\Escritorio\pruebas OXML\pruebagestor\impresion" />
	<propiedad nombre="MDIFileSystemWatcherAlwaysOn" valor="false" />
	<propiedad nombre="NombreImpresoraMDI" valor="" />


	<!-- Lo mismo que con la configuración para la impresora virutal de PDF, establece los
	   valores para la impresora virtual de documentos XPS-->
	<propiedad nombre="DirectorioSalidaXPS" valor="C:\Documents and Settings\mapache1\Escritorio\pruebas OXML\pruebagestor\impresion" />
	<propiedad nombre="XPSFileSystemWatcherAlwaysOn" valor="false" />
	<propiedad nombre="NombreImpresoraXPS" valor="Microsoft XPS Document Writer" />

	<!-- Especifica el timeout por defecto en milisegundos para aguardar a la generación del
	   archivo tras enviárselo a la impresora virtual.-->
	<propiedad nombre="DefaultTimeOutMilliseconds" valor="20000" />

</configuracion>
