<Window x:Class="Bugs.Windows.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:m="clr-namespace:Signum.Windows;assembly=Signum.Windows"
    xmlns:s="clr-namespace:System;assembly=System"
    xmlns:w="clr-namespace:Bugs.Windows"
    Title="Window1">
    <StackPanel Orientation="Vertical">
        <Border Margin="10" Background="{Binding SelectedColor, ElementName=cp, Converter={m:Pipe First={x:Static w:MyConverters.DarkColor}, Second={x:Static w:MyConverters.ColorBrushConverter}}}" Width="100" Height="100"/> 
        <m:ColorPicker x:Name="cp" SelectedColor="Red" />
      </StackPanel>
</Window>
