<Window x:Class="Bugs.Windows.Main"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:m="clr-namespace:Signum.Windows;assembly=Signum.Windows"
    xmlns:d="clr-namespace:Bugs.Entities;assembly=Bugs.Entities"
    Title="Bug Tracking"  SizeToContent="WidthAndHeight">
    <Menu MaxHeight ="{x:Static SystemParameters.MenuBarHeight}">
        <MenuItem Header="Entities">
            <MenuItem Header="_Bugs" Tag="{m:FindOptions QueryName={x:Type d:BugDN}}"/>
            <MenuItem Header="_Developer" Tag="{m:FindOptions QueryName={x:Type d:DeveloperDN}}"/>
            <MenuItem Header="_Customers" Tag="{m:FindOptions QueryName={x:Type d:CustomerDN}}"/>
            <MenuItem Header="_Project" Tag="{m:FindOptions QueryName={x:Type d:ProjectDN}}"/>
            <MenuItem Header="_Prueba" Click="MenuItem_Click"/>
        </MenuItem>
    </Menu>
</Window>
